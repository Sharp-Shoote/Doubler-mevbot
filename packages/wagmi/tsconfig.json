{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "dist"],
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "dist",
    "paths": {
      "*": ["./src/*", "./node_modules/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "ignoreDeprecations": "5.0",
    "moduleResolution": "node"
  }
}
